<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainMenu">


    <TextView
        android:id="@+id/mainMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textSize="18dp"/>
    <Button
        android:id="@+id/notesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes"
        app:layout_constraintTop_toBottomOf="@id/mainMenuTitle"
        android:layout_marginTop="32dp"/>
    <Button
        android:id="@+id/reminderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reminders"
        app:layout_constraintTop_toBottomOf="@id/notesBtn"
        android:layout_marginTop="32dp"/>
    <Button
        android:id="@+id/contactsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacts"
        app:layout_constraintTop_toBottomOf="@id/reminderBtn"
        android:layout_marginTop="32dp"/>
    <Button
        android:id="@+id/multimediaBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multimedia"
        app:layout_constraintTop_toBottomOf="@id/contactsBtn"
        android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>